{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "./dist/out-tsc",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    // Rigorosos:
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,              // Evita uso de índice sem checagem
    "exactOptionalPropertyTypes": true,            // Torna ? estritamente opcional
    "useUnknownInCatchVariables": true,            // Desencoraja uso de 'any' em catch
    "forceConsistentCasingInFileNames": true,      // Consistência no case dos arquivos
    "allowUnusedLabels": false,                    // Proíbe labels não usadas
    "allowUnreachableCode": false,                 // Proíbe código inalcançável
    "noUnusedParameters": false                 // Proíbe parâmetros não utilizados
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "enableI18nLegacyMessageIdFormat": false
  }
}
